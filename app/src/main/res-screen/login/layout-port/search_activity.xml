<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


        <LinearLayout
            android:background="#533889"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"

                android:paddingTop="0dp"
                android:layout_margin="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp">
                <RelativeLayout android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView android:layout_marginStart="10dp"
                    android:layout_width="60dp" android:gravity="center"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" android:id="@+id/btn_back"
                    android:drawableLeft="@drawable/ic_back" />
                <TextView
                    android:layout_width="wrap_content" android:textAllCaps="true"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"
                    android:textColor="@android:color/white" android:focusableInTouchMode="true" android:focusable="true"
                    android:textSize="16sp" android:text="VIN/Rego/Barcode/QRCode">
                        <requestFocus/>
                </TextView>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <EditText android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
                android:id="@+id/edi_keyword"
                style="@style/textbox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textbox_height_35"
                android:drawableLeft="@drawable/ic_search_gray"
                android:hint="Search"
                android:imeOptions="actionDone"
                android:textSize="14sp" />

            <LinearLayout android:background="@color/color_4" android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="@dimen/textbox_height_35" >
                <TextView android:layout_marginStart="10dp" android:text="Value"
                    android:layout_width="45dp" android:textColor="@color/color_1"
                        android:layout_centerVertical="true" android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" android:textSize="12sp"/>
                <TextView android:layout_marginStart="5dp" android:text="Location" android:drawableRight="@drawable/ic_down"
                    android:layout_width="80dp" android:id="@+id/txt_location" android:textColor="@color/color_1" android:gravity="center_vertical"
                    android:layout_centerVertical="true" android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" android:textSize="12sp"/>
                <TextView android:layout_marginStart="5dp" android:text="Floor"
                    android:layout_width="40dp" android:textColor="@color/color_1"
                    android:layout_centerVertical="true" android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" android:textSize="12sp"/>
                <TextView android:layout_marginStart="5dp" android:text="Bay"
                    android:layout_width="40dp" android:textColor="@color/color_1"
                    android:layout_centerVertical="true" android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" android:textSize="12sp"/>
                <TextView android:layout_marginStart="5dp" android:text="Name"
                    android:layout_width="40dp" android:textColor="@color/color_1"
                    android:layout_centerVertical="true" android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" android:textSize="12sp"/>
                <TextView android:layout_gravity="center_vertical" android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" android:drawableRight="@drawable/ic_down" android:gravity="left|center_vertical"
                    android:layout_width="0dp" android:layout_weight="1"  android:textSize="12sp" android:textColor="@color/color_1" android:text="Date"
                    android:layout_height="match_parent" android:id="@+id/txt_date" android:layout_marginEnd="5dp"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/recycler_view" android:background="@color/white"
                android:layout_width="match_parent" android:scrollbars="vertical"
                android:layout_height="0dp" android:layout_weight="1"/>

            <TextView android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
                android:textColor="@color/white" android:id="@+id/btn_export"
                android:layout_width="wrap_content" android:paddingLeft="30dp" android:text="Export"
                android:background="@color/orange" android:layout_gravity="center_horizontal" android:gravity="center"
                android:layout_height="@dimen/textbox_height_35" android:paddingRight="30dp" >

            </TextView>

        </LinearLayout>

</layout>